<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/css/storeView.css">
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>

<body>
    <h1>Store</h1>

    <p>In this page you can see and add new products to your shopping cart.</p>
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Name</td>
                <td>@i.Description</td>
                <td>@i.Price</td>
            </tr>
        }
    </table>
    <br>
    <!-- Trigger/Open The Modal -->
    <button id="myBtn">Add product</button>

    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content-store">
            <span class="close">&times;</span>
            <p>Some text in the Modal..</p>
        </div>

    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/storeView.js"></script>
</body>
</html>